/* pages/integral/index.wxss */

.integral-bg {
  width: 100%;
  height: 222rpx;
  background: url('http://image.supconit.net/jifenBg.png')center no-repeat;
  background-size: 100% 100%;
  text-align: center;
}

.integral-bg text {
  font-size: 20rpx;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);

}

.current-integral-rap {
  height: 65rpx;
  width: 65rpx;
  line-height: 65rpx;
min-width: 270rpx;
  margin: 40rpx auto 0;
  font-size:65rpx;
font-family:MicrosoftYaHei;
color:rgba(255,255,255,1);
text-align: center;
}
.current-integral-rap image{
width: 64rpx;
height: 64rpx;
float: left;
}
.view-title{
height:110rpx;
background:rgba(255,255,255,1);
width: 100%;
text-indent: 35rpx;
font-size:28rpx;
color:rgba(51,51,51,1);
line-height: 110rpx;
}
.integral-content-wrap{
  width: 100%;
  height: auto;
  padding: 30rpx 30rpx 0;
  box-sizing: border-box;
  -moz-box-sizing: border-box;
  -webkit-box-sizing: border-box;
}
.integral-content{
  width: 100%;
  /* height: 200rpx; */
  /* background: red; */
  background:#fff;
box-shadow:4rpx 4rpx 10rpx 0px rgba(130,130,130,0.12);
border-radius:16rpx ;
}
.integral-item{
  height:108rpx;
padding:0 20rpx;
  box-sizing: border-box;
  -moz-box-sizing: border-box;
  -webkit-box-sizing: border-box;
  border-bottom:1px solid #f3f3f3;
}
.integral-item .integral-change-date{
  font-size:24rpx;
color:rgba(102,102,102,1);
  display: block;
  line-height:60rpx;
  height:60rpx;
}
.integral-item .change-detail{
  height: 108rpx;
  width: 100%;
  line-height: 108rpx;

}
.integral-item .change-detail>view{
 float: left;
 font-size:26rpx;
color:rgba(51,51,51,1);
text-align: left;
}
.integral-item .change-detail .change-detail-name{
  width: 25%;
}
.integral-item .change-detail .change-detail-dis{
width:50%;
text-align: center;
}
 .integral-item .change-detail .change-detail-score{
width: 25%;
text-align: right;
  font-size:32rpx;
}
.integral-item .change-detail .change-detail-score.red{

color:rgba(244,51,60,1);
}
.integral-item .change-detail .change-detail-score.green{
  color:#0EDB51;
}
.van-ellipsis.van-ellipsis.van-tab__title.van-tab__title{
 padding: 0 35rpx;
 display: inline-block;
 width: 80rpx !important;
}
.van-ellipsis.van-ellipsis.van-tab.van-tab{
   /* width: 80rpx !important; */
   display: inline-block;
}
.tips-wrap{
   position: absolute;
 width: 390rpx;
 height: 390rpx;
 margin: auto;
 top: 0;
 left: 0;
 bottom:0;
 right:0;
 background: url('https://image.supconit.net/noRecodes.png') center no-repeat;
 background-size: 100% 100%;
 padding-top: 286rpx;
 border:1px solid transparent;
 -moz-box-sizing: border-box;
 box-sizing: border-box;
 -webkit-box-sizing: border-box;
 text-align: center;
 font-size:32rpx;
 letter-spacing: 1px;
font-weight:500;
color:rgba(102,102,102,1);
}