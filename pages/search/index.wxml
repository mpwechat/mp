<view class='container'>
  <view class='search-wrap'>
    <view class='search-content'>
      <view class='search-tab-wrap'>
        <view class="tab-item {{currentTab===index?'active':''}}" bindtap='showSearch' wx:for="{{tabsType}}" data-id='{{item.id}}' wx:key='index'>
          <text>{{item.text}}</text>
        </view>

      </view>
      <!-- tab完 -->
      <view class='tabs-content'>
        <!-- 门票 -->
        <view class='ticket-order-wrap' hidden='{{currentTab !=0}}'>
          <view class='form'>
            <form bindsubmit="formSubmit" bindreset="formReset">
              <view class='form-item '>
                <text class='form-label'>目的地</text>
                <view class='form-it-content'>
                  <input value='{{ticketFormDestination}}' placeholder='请输入目的地'></input>
                </view>
                <view class='recommended-list'>
                  <text class='recommended-item' wx:for="{{recommendedList}}" wx:key='index'  bindtap='autoFill' data-text='{{item}}'>{{item}}</text>
                </view>
              </view>
              <!-- 目的地 -->
              <view class='form-item '>
                <text class='form-label'>预计出行日期</text>
                <view class='form-it-content' >
              
  
                    <view class="picker" bindtap='openTravelTimePopup'>
                      当前选择: {{filter.format(ticketFormDate)}}
                    </view>
                    <wxs module="filter">
            function format(ts) {
              var d = getDate(ts)
              return [d.getFullYear(), d.getMonth() + 1, d.getDate()].join('-')
            }
            module.exports.format = format
          </wxs>
                                 <van-popup
  show="{{ travelTimePopupShow}}"
  position="bottom"
  overlay="{{overlay }}"
  bind:close="travelTimePopupShowonClose"
>
 <van-datetime-picker
  type="date"
  value="{{ ticketForm.date }}"
  min-date="{{ minDate }}"
  formatter="{{ formatter }}"
 bind:cancel="travelTimeonInputCancel"
 bind:confirm="travelTimeonInputConfirm"
/>
</van-popup>
                </view>
              </view>
              <!-- 出行人数 -->
              <view class='form-item '>
                <text class='form-label'>出行人数</text>
                <view class='form-it-content' style='font-size:28rpx;'>
                  <input type='number' value='{{ticketFormTravelNumber}}' style='width:100rpx;display:inline-block;position:relative;top:8rpx;text-align:center;'></input>
                  人
                </view>
              </view>
            </form>
          </view>
        </view>
        <!-- 酒店 -->
         <view class='ticket-order-wrap' hidden='{{currentTab !=1}}'>酒店</view>
         <!-- 餐饮 -->
 <view class='ticket-order-wrap' hidden='{{currentTab !=2}}'>餐饮</view>
 <!-- 自助游 -->
  <view class='ticket-order-wrap' hidden='{{currentTab !=3}}'>自助游</view>
  <!-- 旅游+ -->
   <view class='ticket-order-wrap' hidden='{{currentTab !=4}}'>旅游+</view>
      </view>
    </view>
  </view>
<!-- 搜索按钮 -->

<button class='btn' bindtap='goDetailPage'>搜索</button>


</view>