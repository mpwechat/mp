.search-wrap{
  width: 100%;
  height: 827rpx;
  background:url('http://image.supconit.net/searchBg.png') center no-repeat;
  background-size: 100% 100%;
  position: relative;
}
.search-content{
  width: 690rpx;
  height:647rpx;
  background:rgba(255,255,255,1);
box-shadow:0px 20rpx 40rpx 0rpx rgba(130,130,130,0.12);
border-radius:16rpx;
position: absolute;
top: 58rpx;
left: 30rpx;
}
.search-tab-wrap{
  width: 156rpx;
  height: 100%;
  border-right: 2rpx solid  #EBEEF5 ;
  box-sizing: border-box;
  float: left;
}
.tab-item{
height: 20%;
width: 100%;
text-align:center;
font-size:32rpx;
font-weight:400;
color:rgba(51,51,51,1);
padding: 10rpx 0;
box-sizing: border-box;
position: relative;
}
.tab-item text{
  width: 100%;
  height: 100%;
  line-height: 109rpx;
  display: block;
}
.tab-item.active  text:after{
  content: " ";
    width: 64rpx;
    height: 5rpx;
background:rgba(64,158,255,1);
border-radius:3rpx;
position: absolute;
bottom:5rpx;
left: 46rpx;
}
.tabs-content{
width: calc(100% - 156rpx);
height:100%;
float:right;
overflow: hidden;
}
.ticket-order-wrap{
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  padding: 83rpx 36rpx 0;
}
.form-it-content{
  padding:10rpx 0;
  position: relative;
  border-bottom: 1px solid rgba(235,238,245,1);
}
.recommended-list{
 width: 100%;
}
::-webkit-input-placeholder{
  color:rgba(192,196,204,1);
  font-size: 24rpx;
}
.recommended-item{
 padding: 0 5rpx;
 font-size:24rpx;
color:rgba(192,196,204,1);
display: inline-block;
}
input{
  font-size:26rpx;
color:rgba(51,51,51,1);
}
.form-label{
  font-size:24rpx;
color:rgba(102,102,102,1);
}
.btn{
  width:450rpx;
height:88rpx;
background:rgba(64,158,255,1);
border-radius:44rpx;
font-size:32rpx;
color:rgba(255,255,255,1);
letter-spacing: 1px;
margin-top: 83rpx;
outline: none;
border:none;
box-shadow: 2rpx 8rpx 5rpx #eee;
}