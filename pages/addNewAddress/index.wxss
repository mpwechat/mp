/* pages/addNewAddress/index.wxss */

.container {
  width: 100%;
  height: 100%;
  background: #f3f3f3;
}

.input_top {
  width: 100%;
  height: 220rpx;
  background-color: #fff;
  position: relative;
}

.nameAndPhone {
  width: 594rpx;
  height: 220rpx;
  display: inline-block;
}

.name {
  display: inline-block;
  text-indent: 30rpx;
  line-height: 110rpx;
  font-size: 28rpx;
  font-family: PingFang-SC-Regular;
  font-weight: 400;
  color: #3a3a3a;
}

.inputName {
  display: inline-block;
  height: 110rpx;
  position: absolute;
  right: 0;
  top: 0;
}

.inputName>input {
  height: 100%;
  line-height: 110rpx;
  font-size: 32rpx;
  font-family: PingFang-SC-Regular;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  text-indent: 20rpx;
}

.CertificateNum {
  width: 100%;
  height: auto;
  margin-top: 20rpx;
  background-color: #fff;
}
.MailList{
  display: inline-block;
  position: absolute;
  right: 0;
  top: 0;
  width: 156rpx;
  height: 110rpx;
}
.Mail{
  position: absolute;
  right: 50rpx;
  top: 73rpx;
}
.notes{
  width: 100%;
  font-size:24rpx;
  line-height: 64rpx;
  text-indent: 20rpx;
  font-family:PingFang-SC-Regular;
  font-weight:400;
  color:rgba(102,102,102,1);
}
.tags{
  display:flex;
  height:110rpx;
  position:absolute;
  right:0;
  top:0;
  width:427rpx;
  justify-content:space-around;
}
.tags>view{
  line-height: 110rpx;
}
.button{
  width: 100%;
  height: 118rpx;
  display: flex;
  justify-content: center;
  position: fixed;
  bottom: 0;
  background: #F3F3F3;
}
.button button{
  width: 675rpx;
  height: 88rpx;
  outline: none;
  border: none;
  background-color: #409EFF;
  font-size:32rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:rgba(255,255,255,1);
}