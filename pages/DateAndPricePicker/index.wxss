/* pages/DetailsPage/index.wxss */
.date-day {
  display: flex;
  margin: 2px;
  padding: 3px;
  text-align: center;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  border-radius: 16rpx;
  font-size: 28rpx;
  line-height: 40rpx;
}
 
.date-day.bgitem {
  background-color: #d8ecf9;
}
 
.date-day.active {

  background: #409eff;
  color: #fff;
}
 
.date-day.unavailable {
    color: #aaa;
    display: inline-block;
}
 
.date-week {
  display: flex;
  justify-content: center;
  align-content: center;
  margin: 5px;
}
 
.week {

  color: #409EFF ;
  font-size: 28rpx;
}
 
.row {
  display: flex;
  flex-direction: row;
}
 
.item-days {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
color: #333;
  font-size: 28rpx;
}
.amount{
color: #333 ;
  font-size: 28rpx;
}
.bgwhite {
  background-color: #fff;
}
 
.date-year-month {
  text-align: center;
  font-size: 35rpx;
  height: 100rpx;
  line-height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.date-year-month image{
  height: 50rpx;
  width: 50rpx;
  margin: 0 30rpx;
}

.step{
  width: 100%;
  height: 90rpx;
  display: flex;
  justify-content: space-between;
}
.van-popup--bottom{
  border-top-left-radius: 16rpx;
  border-top-right-radius: 16rpx;
}
.step .van-stepper__minus, .step .van-stepper__plus{
  color:#409EFF !important;
}
.wrapper{
  border-top-left-radius: 16rpx;
  border-top-right-radius: 16rpx;
}