/* pages/fillOrder/index.wxss */

.good-type-title {
  font-size: 28rpx;
  color: rgba(51, 51, 51, 1);
  font-weight: bold;
}

.container {
  width: 100%;
  height: 100%;
  padding-bottom: 98rpx;
}

.order-good-info-name {
  font-size: 26rpx;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  margin-top: 10rpx;
}

.start-date {
  width: 100%;
  font-size: 26rpx;
  color: rgba(51, 51, 51, 1);
}

.start-date-item {
  width: 40%;
  display: inline-block;
  font-size: 26rpx;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
}

.room-number {
  width: 100%;
  height: 110rpx;
  line-height: 110rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  position: relative;
}

.room-number .number-option {
  width: 150rpx;
  height: 50rpx;
  margin: auto;
  position: absolute;
  top: 0;
  bottom: 0;
  right: 20rpx;
}

.room-number  .number-option-item {
  display: inline-block;
  width: 48rpx;
  height: 48rpx;
  border: 1px solid rgba(64, 158, 255, 1);
  border-radius: 4rpx;
  float: left;
  box-sizing: border-box;
  -moz-box-sizing: border-box;
  -webkit-box-sizing: border-box;
  line-height: 48rpx;
  text-align: center;
  color: rgba(64, 158, 255, 1);
  cursor: pointer;
}

.room-number  .number-option  .number-option-item:last-child {
  float: right;
}

.room-number-text {
  display: inline-block;
  width: 50rpx;
  height: 48rpx;
  line-height: 48rpx;
  text-align: center;
  position: absolute;
  top: 0;
  bottom: 0;
  right: 0;
  margin: auto;
  left: 0;
}

