/* pages/bindEmail/index.wxss */

.bind-wrap {
  width: 100%;
  height: 100%;
  background:#f3f3f3;
}

.bind-wrap .bind-item {
  width: 100%;
  height: 110rpx;
  border-bottom: 2rpx solid #f3f3f3;
  line-height: 110rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
  -moz-box-sizing: border-box;
  -moz-box-sizing: border-box;
  font-size: 28rpx;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  background: #fff;
}
.bind-wrap .bind-item .input-wrap input{
  width: 380rpx;
font-size:32rpx;
font-weight:400;
color:rgba(51,51,51,1);
}

.bind-wrap .bind-item .input-wrap {
  width: 440rpx;
  height: 100%;
  float: right;

  position: relative;
}

.bind-wrap .bind-item .input-wrap  .iconfont.icon-guanbi {
  display: inline-block;
  height: 36rpx;
  width: 36rpx;
  font-size: 36rpx;
  position: absolute;
  margin: auto;
  top: 0;
  bottom: 0;
  right: 0rpx;
  color: #409eff;
  line-height: 36rpx;
}
.getVerificationCode{
  width: 168rpx;
  height: 54rpx;
  border:none;
  outline: none;
  background: #409EFF;
  color:#fff;
  line-height: 54rpx;
  text-align: center;
  padding: 0;
  font-size: 24rpx;
  position: absolute;
  margin: auto;
  top:0;
  bottom: 0;
  right: 0;
}
.countdown{
  width:168rpx;
height:48rpx;
line-height: 48rpx;
text-align: center;
border:1px solid rgba(64,158,255,1);
border-radius:24rpx;
font-size:20rpx;
font-weight:400;
color:rgba(64,158,255,1);
position: absolute;
  margin: auto;
  top:0;
  bottom: 0;
  right: 0;
}
.container{
  background:#f3f3f3;
}
.submit{
  outline: none;
  border: none;
  width:675rpx;
height:88rpx;
background:rgba(64,158,255,1);
box-shadow:0px 6rpx 10rpx 0px rgba(64,158,255,0.5);
border-radius:8rpx;
padding: 0;
text-align: center;
line-height: 88rpx;
font-size:32rpx;
font-weight:500;
color:rgba(255,255,255,1);
margin-top: 90rpx;

}