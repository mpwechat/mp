page{
  height: 100%;
  background: #F3F3F3;
}
.container {
  background: #F3F3F3;
  height: auto;
  min-height: 100%;
  display: flex;
  justify-content: center;
}
.flex_center{
  width: 690rpx;
  height: 100%;
  padding-bottom: 120rpx;
  margin: 0 auto;
}
.mainInfo{
  width: 100%;
  margin-top: 20rpx;
  height: 160rpx;
  background-color: #F3F3F3;
}
.info{
  width: 100%;
  height: 160rpx;
  background-color: #fff;
  border-radius: 16rpx;
  box-shadow:4rpx 4rpx 10rpx 0rpx rgba(130,130,130,0.12);
  position: relative;
}
.name{
  color:rgba(51,51,51,1);
  font-size: 28rpx;
  position: absolute;
  left: 31rpx;
  top: 41rpx;
}
.idCardNum{
  font-size:24rpx;
  font-family:PingFang-SC-Regular;
  font-weight:400;
  color:rgba(102,102,102,1);
  position: absolute;
  left: 31rpx;
  bottom: 41rpx;
}
.phoneNum{
  font-size:24rpx;
  font-family:PingFang-SC-Regular;
  font-weight:400;
  color:rgba(102,102,102,1);
  position: absolute;
  right: 30rpx;
  bottom: 41rpx;
}
.edit{
  position: absolute;
  right: 20rpx;
  top: 20rpx;
  width:32rpx;
  height:32rpx;
  color:rgba(64, 158, 255, 1);
}
.slotRight{
  width: 120rpx;
  height: 160rpx;
  position: relative;
}
.reduce{
  width: 38rpx;
  height: 38rpx;
  border-radius: 50%;
  background-color: rgba(216, 0, 0, 1);
  color: #fff;
  position: absolute;
  left: 40rpx;
  top: 61rpx;
  text-align:center;
  line-height:33rpx;
}
.delete{
  position: absolute;
  top: 109rpx;
  left: 38rpx;
  color: rgba(216, 0, 0, 1);
  font-size: 22rpx;
  width: 50rpx;
}
.button{
  width: 100%;
  height: 118rpx;
  display: flex;
  justify-content: center;
  position: fixed;
  bottom: 0;
  background: #F3F3F3;
}
.button button{
  width: 675rpx;
  height: 88rpx;
  outline: none;
  border: none;
  background-color: #409EFF;
  font-size:32rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:rgba(255,255,255,1);
}