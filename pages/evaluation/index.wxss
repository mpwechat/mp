/* pages/evaluation/index.wxss */
.container{
background:rgba(243,243,243,1);
position: relative;
}
.order-detail-content{
  width: 100%;
height:198rpx;
background:rgba(255,255,255,1);
}
.order-item-wrap{
  width: 100%;
 height:198rpx;
position: relative;
overflow: hidden;
border-radius: 10rpx;
 margin-bottom: 20rpx;
}
.order-item-wrap:last-child{
  margin-bottom: 0;
}
.order-info-wrap{
  height: 100%;
  width: 100%;
  padding: 0 30rpx;
  border:1px solid transparent;
  box-sizing: border-box;
  -moz-box-sizing: border-box;
  -webkit-box-sizing: border-box;
 
}
.order-icon-wrap{
  width: 86rpx;
  height: 100%;
  float: left;
position: relative;
}
.order-icon-wrap image{
  width: 48rpx;
  height: 48rpx;
  position: absolute;
  top:0;
  left: 0;
  bottom: 0;
  right: 0;
  margin: auto;
}
.order-info-content{
  width: calc(100% - 86rpx);
  height:100%;
  position: relative;
  float: right;
  border:1px solid transparent;
  box-sizing: border-box;
  -moz-box-sizing: border-box;
  -webkit-box-sizing: border-box;
  /* padding-top:47rpx; */
}
.order-info-content .order-name{
  display: block;
  height:40rpx;
font-size:26rpx;
font-weight:bold;
color:rgba(51,51,51,1);
margin-bottom: 5rpx;
margin-top: 47rpx;
}
.order-info-content .order-number,.order-info-content .order-effective-date{
  font-size:20rpx;
 font-weight:400;
 color:rgba(102,102,102,1);
 display: block;
 margin-bottom: 8rpx;
}
.order-info-content .order-price{
 height:25rpx;
font-size:32rpx;
font-weight:bold;
color:rgba(51,51,51,1);
position: absolute;
margin: auto 0;
top:0;
bottom: 0;
right: 50rpx;
}
.order-state{
position: absolute;
top:10rpx;
right:20rpx;
font-size:20rpx;
font-weight:400;
color:rgba(64,158,255,1);
}
.evaluation-wrap{
  width: 690rpx;
  margin: 20rpx auto 0;
}
.conmment-title{
  font-size:28rpx;
color:rgba(51,51,51,1);
margin-bottom: 10rpx;
display: block;
}
.evaluation-content{
width:100%;
height: 628rpx;
background:rgba(255,255,255,1);
border-radius:16rpx;
overflow: hidden
}
.comment-star{
  width: 100%;
  text-align: center;
  margin-top: 50rpx;
}
.satr-item{
display: inline-block;
color:rgba(255,198,0,0.5);
font-size: 48rpx;
margin-right:30rpx;
}
.satr-item.active{
  color:rgba(255,198,0,1);
}
.gend{
font-size:28rpx;
font-weight:400;
color:rgba(255,198,0,1);
}
.comment-area textarea{
width:650rpx;
height:240rpx;
background:rgba(243,243,243,1);
border-radius:8rpx;
margin: 40rpx auto ;
line-height: 30rpx;
padding-top: 10rpx;
text-indent: 20rpx;
font-size: 28rpx;
}
.add-images-wrap{
  width:112rpx;
height:112rpx;
border:1px dashed rgba(153,153,153,1);
font-size:20rpx;
font-weight:400;
color:rgba(153,153,153,1);
text-align: center;
margin-left: 20rpx;
overflow-anchor: hidden;
display: inline-block;
}
.add-images-wrap .iconfont{
  display: block;
  font-size: 60rpx;
  margin-top: 10rpx;
}
.gallery-item{
  display: inline-block;
  margin-left: 20rpx;
  float: left;
}
.gallery-item image{
  float: left;
}
.submit-btn{
  width:302rpx;
height:68rpx;
background:rgba(64,158,255,1);
border-radius:34rpx;
margin: 0 auto;
line-height: 68rpx;
text-align:center;
font-size:28rpx;
color:rgba(255,255,255,1);
letter-spacing: 1px;
margin-top: 180rpx;
}
