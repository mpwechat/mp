/* pages/historySearch/index.wxss */
.gobal-serach-content .van-search__content{
height:68rpx;
background:rgba(255,255,255,1);
box-shadow:2rpx 2rpx 6rpx 0px rgba(130,130,130,0.21);
border-radius:34rpx;
}
.gobal-serach-content .van-search--withaction.van-search--withaction{
background: transparent !important;
}
.search-trrigger{
  font-size:26rpx;
font-weight:500;
color:rgba(102,102,102,1);
}
 .gobal-serach-content .van-cell__left-icon{
  color:#DADADA !important;
}
.seach-history{
  margin-top: 60rpx;
  padding: 0 30rpx;
  border:1px solid transparent;
  box-sizing: border-box;
  -moz-box-sizing: border-box;
  -webkit-box-sizing: border-box;
}
.search-title{
  height: 40rpx;
  font-size:28rpx;
  font-weight: bold;
color:rgba(51,51,51,1);
line-height: 40rpx;
margin-bottom: 30rpx;
}
.search-title .clear{
  display: block;
  height: 40rpx;
  line-height: 45rpx;
  float: right;
  font-size:24rpx;
color:rgba(64,111,245,1);
font-weight: normal;
}
.search-words-item{
width:156rpx;
height:58rpx;
background:rgba(255,255,255,1);
border-radius:29rpx;
font-size:22rpx;
color:rgba(51,51,51,1);
line-height: 58rpx;
text-align: center;
display: inline-block;
margin-bottom: 30rpx;
margin-right: 15rpx;
} 
.search-words-item:nth-child(5n){
  margin-right: 0;
}