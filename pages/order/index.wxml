<wxs  module="filter">
var judgeSate=function(state){
  switch (state) {
    case 0:
      return '已完成';
      break;
      case 1:
      return '未出行';
      break;
      default:
      return '未支付';
  }
}
    module.exports.judgeSate = judgeSate;

</wxs>
