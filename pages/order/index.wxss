.container{
  text-align: left;
  height: auto;
}
.van-tabs{
  width: 100%;
  height: 100%;
 
}

.scroll-view{
  width: 100%;
  box-sizing: border-box;
  -moz-box-sizing:border-box;
  -webkit-box-sizing: border-box;
  padding: 30rpx 30rpx; 
}
.order-item-wrap{
  width: 100%;
 height:234rpx;
background:rgba(255,255,255,1);
box-shadow:4px 4px 10px 0px rgba(130,130,130,0.12);
position: relative;
overflow: hidden;
border-radius: 10rpx;
 margin-bottom: 20rpx;
}
.order-item-wrap:last-child{
  margin-bottom: 0;
}
.order-info-wrap{
  height: 150rpx;
  border-bottom: 1px dashed rgba(235,238,245,1);
  width: 100%;
 
}
.order-icon-wrap{
  width: 86rpx;
  height: 100%;
  float: left;
position: relative;
}
.order-icon-wrap image{
  width: 48rpx;
  height: 48rpx;
  position: absolute;
  top:0;
  left: 0;
  bottom: 0;
  right: 0;
  margin: auto;
}
.order-info-content{
  width: calc(100% - 86rpx);
  height:100%;
  position: relative;
  float: right;
  border:1px solid transparent;
  box-sizing: border-box;
  -moz-box-sizing: border-box;
  -webkit-box-sizing: border-box;
  padding-top: 22rpx;
}
.order-info-content .order-name{
  display: block;
  height:40rpx;
font-size:26rpx;
font-weight:bold;
color:rgba(51,51,51,1);
margin-bottom: 5rpx;
}
.order-info-content .order-number,.order-info-content .order-effective-date{
  font-size:20rpx;
 font-weight:400;
 color:rgba(102,102,102,1);
 display: block;
 margin-bottom: 8rpx;
}
.order-info-content .order-price{
 height:25rpx;
font-size:32rpx;
font-weight:bold;
color:rgba(51,51,51,1);
position: absolute;
margin: auto 0;
top:0;
bottom: 0;
right: 50rpx;
}
.order-state{
position: absolute;
top:10rpx;
right:20rpx;
font-size:20rpx;
font-weight:400;
color:rgba(64,158,255,1);
}
.order-item-wrap .circle-decoration{
width: 30rpx;
height: 30rpx;
position: absolute;
top:135rpx;
background: #f3f3f3;
border-radius: 50%;
/* box-shadow:1px 1px 3px 0px rgba(130,130,130,0.12) inset; */
}
.order-item-wrap .circle-decoration.left{
left: -15rpx;
}
.order-item-wrap .circle-decoration.right{
right: -15rpx;
}
.order-option-wrap{
  height: calc(100% - 150rpx);
  width: 100%;
  padding: 19rpx 20rpx 0 300rpx;
  border:1px solid transparent;
  box-sizing: border-box;
  -moz-box-sizing: border-box;
  -webkit-box-sizing: border-box;
  text-align: right;
}
.order-option-wrap button{
  width:148rpx;
height:44rpx;
line-height: 44rpx;
background:rgba(64,158,255,1);
box-shadow:0px 2rpx 6rpx 0px rgba(64,158,255,0.6);
border-radius:22rpx;
text-align: center;
display: inline-block;
font-size:24rpx;
font-weight:400;
color:rgba(255,255,255,1);
margin-left: 30rpx;
padding: 0;

}
.van-tabs--line{
  padding-top: 90rpx !important;
}
.van-ellipsis.van-ellipsis.van-tab.van-tab{
   /* width: 80rpx !important; */
   display: inline-block;
}
.van-tab{
  padding: 0 20rpx;
}